{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "emitDeclarationOnly": false,
    "composite": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "../../.cache/tsconfig.template-react.build.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "tests/**", "vitest.config.ts"]
}
