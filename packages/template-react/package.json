{
  "name": "@kurdel/template-react",
  "version": "1.0.0",
  "description": "React template engine for the framework",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "clean": "rimraf lib ../../.cache/tsconfig.template-react.build.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:force": "npm run clean && tsc -p tsconfig.build.json --force && tsc-alias -p tsconfig.build.json"
  },
  "keywords": [
    "framework",
    "react",
    "ssr",
    "node",
    "template"
  ],
  "author": "Andrii Sorokin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ignorantic/kurdel.git",
    "directory": "packages/template-react"
  },
  "homepage": "https://github.com/ignorantic/kurdel#readme",
  "bugs": {
    "url": "https://github.com/ignorantic/kurdel/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16"
  },
  "dependencies": {
    "@kurdel/core": "^1.0.0"
  }
}
