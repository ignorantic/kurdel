{
  "name": "@kurdel/template-ejs",
  "version": "1.0.0",
  "description": "EJS template engine for the framework",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "clean": "rimraf lib ../../.cache/tsconfig.template-ejs.build.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:force": "npm run clean && tsc -p tsconfig.build.json --force && tsc-alias -p tsconfig.build.json"
  },
  "keywords": [
    "framework"
  ],
  "author": "Andrii Sorokin",
  "license": "MIT",
  "peerDependencies": {
    "ejs": "^3.1.10"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@vitest/coverage-v8": "^3.2.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16"
  },
  "dependencies": {
    "@kurdel/core": "^1.0.0"
  }
}
