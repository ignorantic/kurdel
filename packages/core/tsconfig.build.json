{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "emitDeclarationOnly": false,
    "composite": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "../../.cache/tsconfig.build.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "tests/**", "vitest.config.ts"]
}
