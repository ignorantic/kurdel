{
  "name": "@kurdel/sample-react",
  "version": "1.0.0",
  "description": "example simple app with react template",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "clean": "rimraf dist ../../.cache/tsconfig.sample.react.build.tsbuildinfo",
    "build": "tsc",
    "build:force": "npm run clean && tsc --force",
    "build:client": "vite build --mode production",
    "build:client:dev": "vite build --mode development",
    "dev": "cross-env NODE_ENV=development node dist/app.js"
  },
  "author": "Andrii Sorokin",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "@kurdel/core": "^1.0.0",
    "@kurdel/facade": "^1.0.0",
    "@kurdel/runtime-node": "^1.0.0",
    "@kurdel/template-react": "^1.0.0",
    "cross-env": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4"
  }
}
